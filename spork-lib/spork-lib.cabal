  build-depends:       base
                     , aeson
                     , directory
                     , filepath
                     , postgresql-simple
                     , postgresql-simple-sop >= 0.1.0.5
                     , generics-sop
                     , mtl
                     , text
                     , containers
                     , multiset
                     , blaze-html
                     , time
                     , transformers
                     , unordered-containers
                     , binary >= 0.7
                     , bytestring
                     , syb
                     , stm
                     , process
                     , hsyslog
                     , unix