  build-depends:       base
                     , aeson
                     , directory
                     , filepath
                     , Spock
                     , spork-lib
                     , postgresql-simple
                     , mtl
                     , wai-middleware-static
                     , wai-extra
                     , wai
                     , text
                     , blaze-html
                     , hsyslog
                     , data-default
                     , http-types
                     , bytestring
                     , fast-logger